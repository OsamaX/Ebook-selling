extends layout

block content
    .container
        .row
            .col-xs-6.col-xs-offset-3
                #logins
                    h1#heading Log In
                    if error
                        .alert.alert-danger
                            strong Error: 
                            =`${error}`
                    form#form(action='/login', method='POST')
                        .form-group
                            label(for='pwd') Email:
                            input#email.form-control(type='email' name="email")
                        .form.form-group
                            label(for='pwd') Password:
                            input#pwd.form-control(type='password' name="password")
                        button.btn.btn-default(type='submit') Login
